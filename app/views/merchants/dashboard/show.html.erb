<h1><%= @merchant.name %></h1>
<div id="favorite_customers">
  <% @merchant.top_five_customers.each do |customer| %>
    <%= "#{customer.first_name} #{customer.last_name} - #{customer.successful_transactions_with_merchant(@merchant)} purchases"%><br>
  <% end %>
</div><br>

<div id="items_ready_to_ship">
  <% @merchant.items_ready_to_ship.each do |item| %>
    <%= "#{item.name} - Invoice #"%><%= link_to item.invoice_id, merchant_invoice_path(@merchant, item.invoice_id) %>
    <%= " - #{item.invoice_date.strftime("%A, %B %d, %Y")}" %><br>

  <% end %>
</div>

<p><%= link_to "Items Index", "merchants/#{@merchant.id}/items" %></p>
<p><%= link_to "Invoices Index", "merchants/#{@merchant.id}/invoices" %></p>