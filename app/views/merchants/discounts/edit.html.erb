<h1>Edit Bulk Discount Page</h1>

<%= form_with model: [@merchant, @discount], method: :patch, data: { turbo: false }, local: true do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :percentage %> 
    <%= form.number_field :percentage %> %
  </div>

  <div>
    <%= form.label :threshold %>
    <%= form.number_field :threshold %>
  </div>

  <div>
    <%= form.submit 'Submit' %>
  </div>
<% end %>